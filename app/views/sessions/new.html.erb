<main class="container">
  <h1>Sign In</h1>


  <%= form_with url: session_path, local:true do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div> <br>

    <div>
      <%= f.submit "Log In", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</main>

