<h1>Displaying all Posts</h1>



<div class='container-fluid justify-content-center'>
  <div class='row'>
    <% @posts.each do |post|%>
    <div class='  card col-md-4 rounded p-3'>
      <h5 class="card-title"><%= link_to post.title, post_path(post), class: "card-link" %></h5>
      <p class="card-text"><%= truncate(post.body, length: 100) %></p>
    </div>
    <% end %>
  </div>
</div>